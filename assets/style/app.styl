// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition

.icon-img
  box-shadow 0px 0px 3px 3px #ccc
  border-radius 50%
  overflow hidden

  .icon-img-src
    border-radius 0
    width 100%
    height 100%

  &:hover
    cursor pointer
    opacity 0.7

#file_upload
  display none

.activatingDragover
  box-shadow 0px 0px 6px 6px #aaa
